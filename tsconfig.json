{
    "compilerOptions": {
        "lib": ["es2017"],
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "build",
        "sourceMap": true,
        "rootDir": "src",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
